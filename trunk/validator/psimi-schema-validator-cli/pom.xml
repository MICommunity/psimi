<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>psidev.psi.mi</groupId>
        <artifactId>validator</artifactId>
        <version>1.8.2-SNAPSHOT</version>
    </parent>

    <groupId>psidev.psi.mi</groupId>
    <artifactId>psimi-schema-validator-cli</artifactId>
    <version>2.0.4-SNAPSHOT</version>

    <name>psimi-schema-validator-cli</name>

    <properties>
        <scope>mimix</scope>
        <level>INFO</level>
    </properties>

    <profiles>
        <profile>
            <id>validate</id>

            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>exec-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <phase>install</phase>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                            </execution>
                        </executions>
                        <configuration>
                            <executable>java</executable>
                            <arguments>
                                <argument>-Xmx1024m</argument>
                                <argument>-classpath</argument>
                                <!-- automatically creates the classpath using all project dependencies,
                                     also adding the project build directory -->
                                <classpath />
                                <argument>psidev.psi.mi.ValidatorClient</argument>
                                <!-- The file to validate, when a directory is given, process all files with an extension .XML recursively -->
                                <argument>${file}</argument>
                                <!-- Apply validation given scope (XML, CV, MIMIX, IMEX) -->
                                <argument>${scope}</argument>
                                <!-- If specified, only output messages that are of the same level or more severe -->
                                <argument>${level}</argument>
                            </arguments>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

    <dependencies>
        <dependency>
            <groupId>psidev.psi.mi</groupId>
            <artifactId>psimi-schema-validator</artifactId>
            <version>${pom.version}</version>
        </dependency>

        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.4</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <repositories>
        <repository>
            <id>intact.nexus</id>
            <name>IntAct Nexus</name>
            <url>http://www.ebi.ac.uk/intact/maven/nexus/content/groups/public</url>
        </repository>
    </repositories>

</project>
