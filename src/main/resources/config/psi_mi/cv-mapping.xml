<?xml version="1.0" encoding="UTF-8"?>
<CvMapping xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:noNamespaceSchemaLocation="http://www.psidev.info/files/validator/CvMapping.xsd"
           modelName="PSI-MI" modelURI="MI" modelVersion="2.5">

    <CvReferenceList>
        <CvReference cvName="PSI-MI" cvIdentifier="MI"/>
        <CvReference cvName="PSI-MOD" cvIdentifier="MOD"/>
    </CvReferenceList>

    <CvMappingRuleList>

        <CvMappingRule id="R1" name="Interaction Detection Method"
                       cvElementPath="/interactionEvidence/experiment/interactionDetectionMethod/@MIIdentifier"
                       cvTermsCombinationLogic="OR"
                       scopePath="/interactionEvidence/experiment/interactionDetectionMethod"
                       requirementLevel="MUST">
            <CvTerm termAccession="MI:0001" allowChildren="true" termName="interaction detection method" useTerm="false" cvIdentifierRef="MI"/>
        </CvMappingRule>

        <CvMappingRule id="R2" name="Participant Detection Method"
                       cvElementPath="/interactionEvidence/participantEvidences/identificationMethod/@MIIdentifier"
                       cvTermsCombinationLogic="OR"
                       scopePath="/interactionEvidence/participantEvidences/identificationMethod"
                       requirementLevel="MUST">
            <CvTerm termAccession="MI:0002" allowChildren="true" termName="participant identification method" useTerm="false" cvIdentifierRef="MI"/>
        </CvMappingRule>

        <CvMappingRule id="R3" name="Participant's Feature Detection Method"
                       cvElementPath="/interactionEvidence/participantEvidences/featureEvidences/detectionMethod/@MIIdentifier"
                       cvTermsCombinationLogic="OR"
                       scopePath="/interactionEvidence/participantEvidences/featureEvidences/detectionMethod"
                       requirementLevel="SHOULD">
            <CvTerm termAccession="MI:0003" allowChildren="true" termName="feature detection method" useTerm="false" cvIdentifierRef="MI"/>
        </CvMappingRule>

        <CvMappingRule id="R4" name="Participant's Feature Type"
                       cvElementPath="/interactionEvidence/participantEvidences/featureEvidences/type/identifiers[1]/@id"
                       cvTermsCombinationLogic="OR"
                       scopePath="/interactionEvidence/participantEvidences/featureEvidences/type"
                       requirementLevel="SHOULD">
            <!--feature type from MI like binding domain, mutations-->
            <CvTerm termAccession="MI:0116" allowChildren="true" termName="feature type" useTerm="false" cvIdentifierRef="MI" />
            <!--feature type from MOD full list of ptm-->
            <CvTerm termAccession="MOD:00000" allowChildren="true" termName="protein modification" useTerm="false" cvIdentifierRef="MOD" />
        </CvMappingRule>

        <CvMappingRule id="R5" name="Interactor Type"
                       cvElementPath="/interactionEvidence/participantEvidences/interactor/type/@MIIdentifier"
                       cvTermsCombinationLogic="OR"
                       scopePath="/interactionEvidence/participantEvidences/interactor/type"
                       requirementLevel="MUST">
            <CvTerm termAccession="MI:0313" allowChildren="true" termName="interactor type" useTerm="false" cvIdentifierRef="MI"/>
        </CvMappingRule>

        <CvMappingRule id="R6" name="Participant's Biological Role"
                       cvElementPath="/interactionEvidence/participantEvidences/biologicalRole/@MIIdentifier"
                       cvTermsCombinationLogic="OR"
                       scopePath="/interactionEvidence/participantEvidences/biologicalRole"
                       requirementLevel="MAY">
            <CvTerm termAccession="MI:0500" allowChildren="true" termName="biological role" useTerm="false" cvIdentifierRef="MI"/>
        </CvMappingRule>

        <CvMappingRule id="R7" name="Participant's Experimental Role"
                       cvElementPath="/interactionEvidence/participantEvidences/experimentalRole/@MIIdentifier"
                       cvTermsCombinationLogic="OR"
                       scopePath="/interactionEvidence/participantEvidences/experimentalRole"
                       requirementLevel="MAY">
            <CvTerm termAccession="MI:0495" allowChildren="true" termName="experimental role" useTerm="false" cvIdentifierRef="MI"/>
        </CvMappingRule>

        <CvMappingRule id="R8" name="Feature's Range Status"
                       cvElementPath="/interactionEvidence/participantEvidences/featureEvidences/ranges/status/@MIIdentifier"
                       cvTermsCombinationLogic="OR"
                       scopePath="/interactionEvidence/participantEvidences/featureEvidences/ranges/status"
                       requirementLevel="MUST">
            <CvTerm termAccession="MI:0333" allowChildren="true" termName="feature range status" useTerm="false" cvIdentifierRef="MI"/>
        </CvMappingRule>

    </CvMappingRuleList>
</CvMapping>
