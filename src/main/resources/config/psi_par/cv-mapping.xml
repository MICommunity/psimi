<?xml version="1.0" encoding="UTF-8"?>
<CvMapping xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:noNamespaceSchemaLocation="http://www.psidev.info/files/validator/CvMapping.xsd"
           modelName="PSI-PAR" modelURI="PAR" modelVersion="2.5">

    <CvReferenceList>
        <CvReference cvName="PSI-PAR" cvIdentifier="PAR"/>
        <CvReference cvName="PSI-MOD" cvIdentifier="MOD"/>
    </CvReferenceList>

   <CvMappingRuleList>

       <CvMappingRule id="R2" name="Interaction Detection Method PAR rule"
                      cvElementPath="/interactionEvidence/experiment/interactionDetectionMethod/@PARIdentifier"
                      cvTermsCombinationLogic="OR"
                      scopePath="/interactionEvidence/experiment/interactionDetectionMethod"
                      requirementLevel="MUST">
           <CvTerm termAccession="PAR:0001" allowChildren="true" termName="interaction detection method" useTerm="false" cvIdentifierRef="PAR"/>
           <CvTerm termAccession="PAR:1328" allowChildren="true" termName="molecule production method" useTerm="false" cvIdentifierRef="PAR"/>
       </CvMappingRule>

       <CvMappingRule id="R3" name="Participant Detection Method PAR rule"
                      cvElementPath="/interactionEvidence/participantEvidences/identificationMethod/@PARIdentifier"
                      cvTermsCombinationLogic="OR"
                      scopePath="/interactionEvidence/participantEvidences/identificationMethod"
                      requirementLevel="MUST">
           <CvTerm termAccession="PAR:0002" allowChildren="true" termName="participant identification method" useTerm="false" cvIdentifierRef="PAR"/>
       </CvMappingRule>

       <CvMappingRule id="R4" name="Participant's Feature Type PAR rule"
                      cvElementPath="/interactionEvidence/participantEvidences/featureEvidences/type/identifiers[1]/@id"
                      cvTermsCombinationLogic="OR"
                      scopePath="/interactionEvidence/participantEvidences/featureEvidences/type/"
                      requirementLevel="SHOULD">
           <!--feature type from PAR like binding domain, mutations-->
           <CvTerm termAccession="PAR:0116" allowChildren="true" termName="feature type" useTerm="false" cvIdentifierRef="PAR" />
           <!--feature type from MOD full list of ptm-->
           <CvTerm termAccession="MOD:00000" allowChildren="true" termName="protein modification" useTerm="false" cvIdentifierRef="MOD" />
       </CvMappingRule>

       <CvMappingRule id="R5" name="Participant's Feature Detection Method PAR rule"
                      cvElementPath="/interactionEvidence/participantEvidences/featureEvidences/detectionMethod/@PARIdentifier"
                      cvTermsCombinationLogic="OR"
                      scopePath="/interactionEvidence/participantEvidences/featureEvidences/detectionMethod"
                      requirementLevel="SHOULD">
           <CvTerm termAccession="PAR:0003" allowChildren="true" termName="feature detection method" useTerm="false" cvIdentifierRef="PAR"/>
       </CvMappingRule>

       <CvMappingRule id="R6" name="Experiment's Bibliographical References PAR rule"
                      cvElementPath="/interactionEvidence/experiment/publication/identifiers[1]/database/@PARIdentifier"
                      cvTermsCombinationLogic="OR"
                      scopePath="/interactionEvidence/experiment"
                      requirementLevel="SHOULD">
           <CvTerm termAccession="PAR:0446" allowChildren="false" termName="pubmed" useTerm="true" cvIdentifierRef="PAR"/>
           <CvTerm termAccession="PAR:0574" allowChildren="false" termName="digital object identifier" useTerm="true" cvIdentifierRef="PAR"/>
       </CvMappingRule>

       <CvMappingRule id="R7" name="Interactor Type PAR rule"
                      cvElementPath="/interactionEvidence/participantEvidences/interactor/type/@PARIdentifier"
                      cvTermsCombinationLogic="OR"
                      scopePath="/interactionEvidence/participantEvidences/interactor/type"
                      requirementLevel="MUST">
           <CvTerm termAccession="PAR:0313" allowChildren="true" termName="interactor type" useTerm="false" cvIdentifierRef="PAR"/>
       </CvMappingRule>

       <CvMappingRule id="R8" name="Participant's Biological Role PAR rule"
                      cvElementPath="/interactionEvidence/participantEvidences/biologicalRole/@PARIdentifier"
                      cvTermsCombinationLogic="OR"
                      scopePath="/interactionEvidence/participantEvidences/biologicalRole"
                      requirementLevel="SHOULD">
           <CvTerm termAccession="PAR:0500" allowChildren="true" termName="biological role" useTerm="false" cvIdentifierRef="PAR"/>
       </CvMappingRule>

       <CvMappingRule id="R9" name="Participant's Experimental Role PAR rule"
                      cvElementPath="/interactionEvidence/participantEvidences/experimentalRole/@PARIdentifier"
                      cvTermsCombinationLogic="OR"
                      scopePath="/interactionEvidence/participantEvidences/experimentalRole"
                      requirementLevel="SHOULD">
           <CvTerm termAccession="PAR:0495" allowChildren="true" termName="experimental role" useTerm="false" cvIdentifierRef="PAR"/>
       </CvMappingRule>

       <CvMappingRule id="R10" name="Feature's Range start Status PAR rule"
                      cvElementPath="/interactionEvidence/participantEvidences/featureEvidences/ranges/start/status/@PARIdentifier"
                      cvTermsCombinationLogic="OR"
                      scopePath="/interactionEvidence/participantEvidences/featureEvidences/ranges/start/status"
                      requirementLevel="MUST">
           <CvTerm termAccession="PAR:0333" allowChildren="true" termName="feature range status" useTerm="false" cvIdentifierRef="PAR"/>
       </CvMappingRule>

       <CvMappingRule id="R11" name="Participant's experimental preparation PAR rule"
                      cvElementPath="/interactionEvidence/participantEvidences/experimentalPreparations/@MIIdentifier"
                      cvTermsCombinationLogic="OR"
                      scopePath="/interactionEvidence/participantEvidences/experimentalPreparations"
                      requirementLevel="SHOULD">
           <CvTerm termAccession="PAR:0346" allowChildren="true" termName="experimental preparation" useTerm="false" cvIdentifierRef="PAR"/>
       </CvMappingRule>

       <CvMappingRule id="R12" name="Feature's Range end Status PAR rule"
                      cvElementPath="/interactionEvidence/participantEvidences/featureEvidences/ranges/end//status/@PARIdentifier"
                      cvTermsCombinationLogic="OR"
                      scopePath="/interactionEvidence/participantEvidences/featureEvidences/ranges/end/status"
                      requirementLevel="MUST">
           <CvTerm termAccession="PAR:0333" allowChildren="true" termName="feature range status" useTerm="false" cvIdentifierRef="PAR"/>
       </CvMappingRule>

   </CvMappingRuleList>
</CvMapping>
