<assembly>
    <id>stand-alone-app</id>
    <formats>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <includes>
                <include>CHANGE_LOG*</include>
                <include>README*</include>
                <include>LICENSE*</include>
                <include>NOTICE*</include>
                <include>pom.xml</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>src</directory>
        </fileSet>
        <fileSet>
            <directory>target/site</directory>
        </fileSet>
    </fileSets>


    <dependencySets>
        <dependencySet>
            <outputDirectory>/lib</outputDirectory>
            <unpack>false</unpack>
            <scope>runtime</scope>
        </dependencySet>
    </dependencySets>
</assembly>